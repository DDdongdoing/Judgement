            <RowDefinition Height="102*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="539*"/>
            <RowDefinition Height="69*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="856*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Label Content="特别感谢" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" Height="71" Width="1048" FontSize="50" Grid.ColumnSpan="3" Grid.Column="2"/>
        <Button Name="back" Click="Back_Click" Margin="10" Content="Back" FontSize="30" Style="{StaticResource AccentedSquareButtonStyle}" VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>
        <ListBox Name="list" Grid.ColumnSpan="5" FontSize="16" HorizontalAlignment="Left" Height="649" Margin="10,0,0,10" Grid.Row="1" VerticalAlignment="Bottom" Width="1174" Grid.RowSpan="3"/>

